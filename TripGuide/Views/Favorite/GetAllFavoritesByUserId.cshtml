@using TripGuide.Enums
@model List<FavoriteViewModel>

<h1 class="display-1">Your favorite</h1>
<table class="table table-hover table-striped">
    <thead>
    <tr>
        <th scope="col">Name</th>
        <th scope="col">City</th>
        <th scope="col">Country</th>
        <th scope="col">Loves</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var favorite in Model)
    {
        <tr>
            <td>
                <a asp-controller="Home" asp-action="HomeTripDetails" asp-route-id="@favorite.TripId">
                    <span>@favorite.Name</span>
                </a>
            </td>
            <td>@favorite.City</td>
            <td>@favorite.Country</td>
            <td>@favorite.FavoriteCount</td>
            <td>
                <form method="post" asp-controller="Favorite" asp-action="DeleteFavorite" asp-route-tripId="@favorite.TripId" asp-route-source="@SourceEnum.FavoriteList.ToString()">
                    <button class="btn btn-outline-secondary" type="submit">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>